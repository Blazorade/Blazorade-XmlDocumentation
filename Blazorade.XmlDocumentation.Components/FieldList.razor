@inherits TypeDocumentationBase

<Div @attributes="this.Attributes">
    @if (this.Fields?.Count() > 0)
    {
        if (null != this.HeadingTemplate)
        {
            @this.HeadingTemplate
        }

        <ListGroup IsFlush="true">
            @foreach (var f in this.Fields)
            {
                <ListGroupItem>
                    <Heading Level="5">@f.DocumentedMember.ToDisplayName()</Heading>
                    <Paragraph>
                        <NodeList Nodes="@f.Summary?.ChildNodes" />
                    </Paragraph>
                </ListGroupItem>
            }
        </ListGroup>
    }
</Div>
