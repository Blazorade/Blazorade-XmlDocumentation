@inherits DocumentationComponentBase

@if (this.Types?.Count() > 0)
{
    if (null != this.HeadingTemplate)
    {
        @this.HeadingTemplate
    }

    <ListGroup IsFlush="true">
        @foreach (var t in this.Types)
        {
            var uri = this.UriBuilder.GetTypeUri(this.LibraryKey, t.DocumentedMember);

            <Anchor Url="@uri?.ToString()" OpenInNewTab="@(this.UriBuilder.OpenExternalsInNewTab && uri.IsAbsoluteUri)" class="list-group-item list-group-item-action">
                <Heading Level="5"><TypeIcon Type="@t.DocumentedMember" Width="16" />@t.DocumentedMember.ToDisplayName()</Heading>
                <Paragraph>
                    <NodeList Nodes="@t.Summary.ChildNodes" />
                </Paragraph>
            </Anchor>
        }
    </ListGroup>
}
