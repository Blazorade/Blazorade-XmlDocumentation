@page "/"


@code {
    IComponentBuilder builder = new ColumnBuilder().Col(12).OnAll().Col(6).OnMd().Col(4).OnLg().MarginTop(4);

    [Inject]
    protected DocumentationParserFactory Factory { get; set; }

}

<Heading Level="1">
    <Anchor Url="/">Home</Anchor>
</Heading>

<Row>
    @foreach (var key in this.Factory.GetParserKeys())
    {
        <Column Builder="@this.builder"><LibraryCard LibraryKey="@key" Height="1" /></Column>
    }

